# =============================================================================
# Endeavor SUPER CRM - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive data
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Get these from your Supabase project dashboard → Settings → API
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# -----------------------------------------------------------------------------
# Application Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Application name used in browser title and meta tags
VITE_APP_NAME=Endeavor SUPER CRM

# Application version (typically managed by CI/CD)
VITE_APP_VERSION=1.0.0

# Environment identifier (development, staging, production)
VITE_APP_ENV=production

# -----------------------------------------------------------------------------
# Security Configuration (OPTIONAL - defaults shown)
# -----------------------------------------------------------------------------
# Enable/disable security headers (true/false)
VITE_SECURITY_HEADERS_ENABLED=true

# Content Security Policy mode (strict, relaxed, none)
VITE_CSP_MODE=strict

# Allowed CORS origins (comma-separated, * for all in dev)
# Example: https://app.yourdomain.com,https://admin.yourdomain.com
VITE_CORS_ORIGINS=*

# -----------------------------------------------------------------------------
# Feature Flags (OPTIONAL)
# -----------------------------------------------------------------------------
# Enable/disable specific features
VITE_FEATURE_AI_ASSISTANT=true
VITE_FEATURE_REALTIME=true
VITE_FEATURE_REPORTS=true
VITE_FEATURE_EXPORTS=true

# -----------------------------------------------------------------------------
# Analytics & Monitoring (OPTIONAL)
# -----------------------------------------------------------------------------
# Error tracking API key (e.g., Sentry)
VITE_SENTRY_DSN=

# Analytics tracking ID (e.g., Google Analytics, Plausible)
VITE_ANALYTICS_ID=

# Log level (debug, info, warn, error, none)
VITE_LOG_LEVEL=warn

# -----------------------------------------------------------------------------
# Performance Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Enable request caching
VITE_ENABLE_CACHE=true

# Cache duration in minutes
VITE_CACHE_DURATION=5

# -----------------------------------------------------------------------------
# Server Configuration (Docker/Production)
# -----------------------------------------------------------------------------
# Port for the application server (used by Docker/vite preview)
PORT=5176

# Host to bind the server to
HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Rate Limiting (Server-side configuration)
# -----------------------------------------------------------------------------
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Time window in minutes
RATE_LIMIT_WINDOW_MS=15

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
# Session timeout in minutes (default: 60)
SESSION_TIMEOUT_MINUTES=60

# Enable session auto-refresh
SESSION_AUTO_REFRESH=true

# =============================================================================
# Development Only (DO NOT USE IN PRODUCTION)
# =============================================================================
# Enable mock API responses
VITE_MOCK_API=false

# Mock API delay in milliseconds
VITE_MOCK_DELAY=500

# Enable Redux/Vue DevTools in production (security risk!)
VITE_DEVTOOLS_ENABLED=false
